<div class="container mt-3">
  <h1>Create new Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <%= f.submit "Add Restaurant", :class => "btn btn-primary"  %>
  <% end %>
</div>
